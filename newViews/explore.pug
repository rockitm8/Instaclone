    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
  body
    nav.navigation
      a(href='/feed')
        img.navigation__logo(src='images/navLogo.png', alt='logo', title='logo')
      .navigation__search-container
        i.fa.fa-search
        input(type='text', placeholder='Search')
      .navigation__icons
        a.navigation__link(href='/explore')
          i.fa.fa-compass
        a.navigation__link()
          i.fa.fa-heart-o
        a.navigation__link(href='/profile')
          i.fa.fa-user-o
    main.explore
      section.people
        ul.people__list
        each user in data
          li.people__person
            .people__column
              .people__avatar-container
                img.people__avatar(src='images/avatar.jpg')
              .people__info
                span.people__username #{user.username}
                span.people__full-name #{user.name}
            .people__column
              a.follow() Follow
